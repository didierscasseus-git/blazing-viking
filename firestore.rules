rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isStaff() {
      return isSignedIn() && (getUserData().role in ['OWNER', 'MANAGER', 'SERVER', 'HOST', 'KITCHEN']);
    }

    function isAdmin() {
      return hasRole('OWNER') || hasRole('MANAGER');
    }

    // --- Rules ---

    // Users Collection (Staff Profiles)
    match /users/{userId} {
      allow read: if isSignedIn(); // Staff need to read each other's profiles for assignments
      allow create: if isAdmin(); // Only admins can create new staff
      allow update: if isAdmin() || request.auth.uid == userId; // Admins or self
      allow delete: if isAdmin(); // Only admins can delete/archive staff
    }

    // Customers (PII - Sensitive)
    match /customers/{customerId} {
      allow read: if isStaff();
      allow create: if isStaff();
      allow update: if isStaff();
      allow delete: if isAdmin(); // Deletion requires higher privilege
    }

    // Reservations
    match /reservations/{reservationId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }

    // Orders
    match /orders/{orderId} {
      allow read: if isStaff();
      allow create: if isStaff();
      allow update: if isStaff();
      allow delete: if isAdmin(); // Deleting orders is dangerous (audit trail)
    }

    // Menu Items
    match /menu_items/{itemId} {
      allow read: if true; // Public read for website
      allow write: if isAdmin(); // Only management changes menu
    }

    // Floor Plans & Tables
    match /floor_plans/{planId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    match /tables/{tableId} {
      allow read: if isStaff();
      allow write: if isStaff(); // Servers update status (occupied/dirty)
    }

    // Audit Logs (Immutable)
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); // Backend or Client can write logs
      allow update: if false; // Immutable
      allow delete: if false; // Immutable
    }
    
    // Website CMS Data
    match /website_pages/{pageId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
